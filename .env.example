# ==================================
# TEACHER JOB PORTAL - ENVIRONMENT CONFIGURATION
# ==================================
# Copy this file to .env and replace with your actual values
# NEVER commit your actual .env file to version control

# ==================================
# REQUIRED API KEYS
# ==================================

# OpenAI API Key - Required for AI chat assistant and job recommendations
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Google Gemini AI API Key - Required for resume analysis and job matching  
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_google_gemini_api_key_here

# ==================================
# DATABASE CONFIGURATION
# ==================================

# PostgreSQL Database URL - Required for data storage
# Format: postgresql://username:password@host:port/database
# For local development: postgresql://postgres:password@localhost:5432/teacher_portal
DATABASE_URL=postgresql://username:password@localhost:5432/teacher_portal

# ==================================
# AUTHENTICATION & SECURITY
# ==================================

# Session Secret - Required for secure session management
# Generate a secure random string (recommended: 32+ characters)
# You can generate one using: openssl rand -base64 32
SESSION_SECRET=your_secure_random_session_secret_here_minimum_32_characters

# ==================================
# OPTIONAL SERVICES
# ==================================

# SendGrid API Key - Optional, for email notifications
# Get your key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SendGrid Email Configuration (if using email service)
SENDGRID_FROM_EMAIL=noreply@yourteacherjobportal.com
SENDGRID_FROM_NAME=Teacher Job Portal

# Enable/disable email sending (true/false)
EMAIL_ENABLED=false

# ==================================
# APPLICATION SETTINGS
# ==================================

# Node Environment (development/production/test)
NODE_ENV=development

# Application URL (used for email links and redirects)
APP_URL=http://localhost:5000

# ==================================
# ADVANCED CONFIGURATION (Optional)
# ==================================

# LangSmith Configuration (Optional - for AI tracing)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=teacher-portal-agents
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Redis URL (Optional - for advanced caching)
REDIS_URL=redis://localhost:6379

# Cache Configuration (Optional)
CACHE_MEMORY_MAX_ENTRIES=200
CACHE_DEFAULT_TTL_MS=3600000
CACHE_STALE_WHILE_REVALIDATE=true
CACHE_STALE_IF_ERROR_MS=86400000
CACHE_PERSIST_TO_DB=true
CACHE_CLEANUP_INTERVAL_MS=300000
CACHE_MAX_SIZE_BYTES=52428800

# HTTP Client Configuration (Optional)
HTTP_BASE_DELAY=500
HTTP_MAX_DELAY=30000
HTTP_BACKOFF_FACTOR=2
HTTP_MAX_RETRIES=3
HTTP_GLOBAL_CONCURRENCY=10
HTTP_DOMAIN_CONCURRENCY=2
HTTP_MIN_TIME_BETWEEN_REQUESTS=1500
HTTP_CB_FAILURE_THRESHOLD=5
HTTP_CB_COOLDOWN_MS=600000
HTTP_CB_HALFOPEN_REQUESTS=3
HTTP_TIMEOUT=30000

# ==================================
# DEVELOPMENT & TESTING
# ==================================

